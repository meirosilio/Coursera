
<h1 class="col-md-offset-1">Searching for <%=@search_term%></h1>

<% if (@recipes.nil? or @recipes == []) %>
    <p class="col-md-offset-1"> <h2>No recipes found.. Sorry</h2></p>

<% else %>

    <table border="1" class="col-md-offset-1">
      <tr>
        <th>Thumbnail</th>
        <th>Title</th>
        <th>Social Rank</th>
      </tr>

      <% @recipes.each do |recipe| %>
          <tr class=<%= cycle('even', 'odd') %>>
            <td><%= link_to(image_tag(recipe["image_url"], height: '100', width: '100'), recipe["f2f_url"])%></td>
            <td><%= link_to(sanitize(recipe["title"]), recipe['f2f_url']) %></td>
            <td><%= sprintf '%.0f', recipe["social_rank"]%>%</td>
          </tr>
      <% end %>
    </table>

<% end %>
